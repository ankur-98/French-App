<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#192230"
    android:orientation="vertical"
    android:weightSum="9"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="5"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/mainmenuimg1"
        android:scaleType="centerCrop"
        />

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="2"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F17946"
                >

                <TextView
                    android:id="@+id/item1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/filet"
                    android:fadingEdge="horizontal|vertical"
                    android:gravity="center"
                    android:text="@string/list1"
                    android:textAlignment="center"
                    android:textColor="@color/listtext"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7CCDC7"
                >
                <TextView
                    android:id="@+id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/filet"
                    android:fadingEdge="horizontal|vertical"
                    android:gravity="center"
                    android:text="@string/list2"
                    android:textAlignment="center"
                    android:textColor="@color/listtext"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>