<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    android:weightSum="9"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:src="@drawable/productplaceholder"
        android:scaleType="fitXY"
        />
    <!--<TextView-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="5"-->
        <!--android:text="@string/app_name"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:gravity="center"-->
        <!--android:textSize="65sp"-->
        <!--android:textStyle="bold"-->
        <!--android:id="@+id/heading_appname"-->
        <!--/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="2"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/imageitem1"
                android:src="@drawable/general"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginLeft="36dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="34sp"
                android:layout_marginLeft="36dp"
                android:layout_toRightOf="@id/imageitem1"
                android:layout_centerVertical="true"
                android:textColor="@color/listtext"
                android:background="@android:color/transparent"
                android:text="@string/list1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/imageitem2"
                android:src="@drawable/grammar"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginLeft="36dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="34sp"
                android:layout_marginLeft="36dp"
                android:layout_toRightOf="@id/imageitem2"
                android:layout_centerVertical="true"
                android:textColor="@color/listtext"
                android:background="@android:color/transparent"
                android:text="@string/list2"
                />
        </RelativeLayout>
        <!--<ListView-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/menu_list"-->
            <!--/>-->
    </LinearLayout>

</LinearLayout>