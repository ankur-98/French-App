<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeec"
    tools:context="app.french.Creators">

    <RelativeLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="3"   >

        <ImageView
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:src="@drawable/grey"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:layout_marginBottom="16dp"
        android:weightSum="6"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="2"  >

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:padding="8dp"
                android:src="@drawable/circlelogo"
                android:id="@+id/creator_one_image" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/creator_one_image"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/creator_one_image"
                        android:id="@+id/creator_one_name"
                        android:textSize="22.5sp"
                        android:text="ANKUR AGARWAL"
                        android:paddingBottom="4dp"/>

                 <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/creator_one_about"
                        android:text="DEVELOPER"
                        android:textSize="18dp"
                        android:paddingBottom="4dp"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/creator_one_contact"
                        android:text="email : ankuronetwo@gmail.com
linkediIn : LinkedIn/in/ankuragarwal" />
            </LinearLayout>

        </RelativeLayout>

<!--CREATOR TWO-->
        <RelativeLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="2"  >

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:padding="8dp"
                android:src="@drawable/circlelogo" 
                android:id="@+id/creator_two_image"/>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/creator_two_image"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/creator_two_image"
                    android:id="@+id/creator_two_name"
                    android:textSize="22.5sp"
                    android:text="ADITYA MAGARDE"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/creator_two_about"
                    android:text="DEVELOPER"
                    android:textSize="18dp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/creator_two_contact"
                    android:text="email : adityamagarde26@gmail.com
linkediIn : LinkedIn/in/adityamagarde" />
            </LinearLayout>

<!--CREATOR THREE-->            
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="2"  >

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:padding="8dp"
                android:src="@drawable/circlelogo" 
                android:id="@+id/creator_three_image"/>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/creator_three_image"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/creator_three_image"
                    android:id="@+id/creator_three_name"
                    android:textSize="22.5sp"
                    android:text="APARNA M."
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/creator_three_about"
                    android:text="CONTENT PROVIDER"
                    android:textSize="18dp"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/creator_three_contact"
                    android:text="email : aparna@gmail.com
linkediIn : LinkedIn/in/aparna" />
            </LinearLayout>
            
        </RelativeLayout>
        
        
    </LinearLayout>
</LinearLayout>

